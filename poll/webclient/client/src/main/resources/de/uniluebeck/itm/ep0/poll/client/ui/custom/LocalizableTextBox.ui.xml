<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
             xmlns:p="urn:import:de.uniluebeck.itm.ep0.poll.client.ui">

    <ui:style src="../PollAppUi.css"/>

    <ui:with field="img"
             type='de.uniluebeck.itm.ep0.poll.client.ui.PollImageBundle'/>

    <g:HorizontalPanel>
        <g:TextBox ui:field="tbxValue" addStyleNames="{style.localizedboxes}" readOnly="true"/>
        <g:PushButton ui:field="btnLocalize">
            <g:upFace image="{img.locale}"/>
            <g:upHoveringFace image='{img.locale}'/>
            <g:downFace image="{img.locale}"/>
            <g:downHoveringFace image='{img.locale}'/>
        </g:PushButton>
    </g:HorizontalPanel>
</ui:UiBinder> 