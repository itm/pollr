<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style src="../PollAppUi.css" />
		
    <g:DecoratedPopupPanel ui:field="dbxPopup" animationEnabled="true" modal="false" autoHideEnabled="true">
        <g:VerticalPanel>
            <g:FlexTable ui:field="tblLanguages" />
            <g:HTMLPanel styleName="{style.buttonPanel}">
                <table class="{style.buttonTable}">
                    <tr>
                        <td>
                            <g:Button ui:field="btnAdd" styleName="{style.buttons}">Add new</g:Button>
                        </td>
                        <td>
                            <g:Button ui:field="btnDone" styleName="{style.buttons}">Done</g:Button>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:VerticalPanel>
    </g:DecoratedPopupPanel>
</ui:UiBinder>